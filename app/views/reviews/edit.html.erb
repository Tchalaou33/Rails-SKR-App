
<h1>Edit Review</h1>

<%= render partial: "layouts/errors", locals: {object: @review} %>
<%= form_for(@review) do |f| %>
    <%= f.label :routine %>
    <%= f.collection_select :routine_id, Routine.all, :id, :title %>
    <br>
    <br>
    Review: <%= f.text_area :content, cols:30, rows:5 %>
    <br>
    <br>
    <%= f.submit %>
<% end %>