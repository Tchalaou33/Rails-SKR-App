<% if @review.routine %>
    <h1>New Review for <%= @review.routine.title %></h1>
<% else %>
    <h1>New Review</h1>
<% end %>

<%= form_for([@review.routine, @review]) do |f| %>
    <% if !@review.routine %>
        <%= f.label :routine %>
        <%= f.collection_select :routine_id, Routine.alpha, :id, :title %>
    <% else %>
        <%= f.hidden_field :routine_id %>
    <br>
    <% end %>
    <br>
    <br>
    Review:<br>
    <%= f.text_area :content, cols:30, rows:5 %>
    <br>
    <br>
    <%= f.submit "Submit" %>
    <% end %>