<h1>All Routines</h1>


 <%= form_tag('/routines', method: "get") do %>
   <%= label_tag(:season, "Season") %>
   <%= select_tag(:season, options_for_select([ "Winter", "Summer"])) %>
   <%= submit_tag("Search") %>
 <% end %>



<% @routines.all.each do |routine| %>

  <!-- <a href="/routines/<%= routine.id %>"><%= routine.title %></a> -->
  <%= link_to routine.title, routine_path(routine) %>

  <br><br>

<% end %>













